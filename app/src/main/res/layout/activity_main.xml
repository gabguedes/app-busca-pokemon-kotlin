<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/et_pokemon_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Pokémon ID"
        android:inputType="number" />

    <ImageView
        android:id="@+id/iv_pokemon_img"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:layout_marginVertical="32dp"/>

    <Button
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Pokémon" />

    <TextView
        android:id="@+id/tv_pokemon_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="Pokémon Name will appear here" />

    <TextView
        android:id="@+id/tv_pokemon_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="Pokémon Number will appear here" />

    <TextView
        android:id="@+id/tv_pokemon_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="Pokémon Height will appear here" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_sprites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal" />
</LinearLayout>